<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="greenColor">Green</Color>
            <Color x:Key="blueColor">#1E90FF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource greenColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style x:Key="blueButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColor}"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>